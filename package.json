{
  "name": "cloudflare",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler types && react-router dev",
    "build": "wrangler types && react-router build",
    "deploy": "npm run build && npm run db:migrate-remote && wrangler deploy",
    "preview": "npm run build && vite preview",
    "typecheck": "wrangler types && react-router typegen && tsc -b",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "wrangler d1 migrations apply D1",
    "db:migrate-remote": "wrangler d1 migrations apply D1 --remote"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.44.5",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "isbot": "^5.1.31",
    "lucide-react": "^0.544.0",
    "marked": "^16.3.0",
    "pinyin-pro": "^3.27.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^16.0.0",
    "react-router": "^7.9.3"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.13.7",
    "@react-router/dev": "^7.9.3",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.14",
    "@types/react-dom": "^19.1.9",
    "drizzle-kit": "^0.31.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4",
    "wrangler": "^4.40.2"
  }
}
